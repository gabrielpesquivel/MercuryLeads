{
    "version": 2,
    "builds": [
        { "src": "app.py", "use": "@vercel/python" }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "app.py" }
    ],
    "buildCommand": "pip install -r requirements.txt",
    "startCommand": "waitress-serve --port=5000 app:app",
    "env": {
        "PYTHON_VERSION": "3.9"
    }
}
